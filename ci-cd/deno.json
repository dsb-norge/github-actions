{
  "imports": {
    "common/": "./common/",
    "testdata/": "./testdata/",
    "create-app-vars-matrix/": "./create-app-vars-matrix/action/",
    "create-build-envs/": "./create-build-envs/action/"
  },
  "tasks": {
    "test": "deno test --unstable-temporal --no-check --allow-all"
  },
  "test": {
    "include": [
      "./create-app-vars-matrix/action/test_*.ts",
      "./create-build-envs/action/test_*.ts"
    ]
  },
  "unstable": ["temporal"],
  "fmt": {
    "useTabs": false,
    "lineWidth": 450,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": [
      "./common/**",
      "./create-app-vars-matrix/**",
      "./create-build-envs/**",
      "./require-build-envs/**",
      "./build-maven-project/**",
      "./build-nodejs-project/**",
      "./build-docker-image/**",
      "./build-spring-boot-image/**",
      "./comment-or-pr/**",
      "./deploy-to-ephemeral/**"
    ]
  }
}
